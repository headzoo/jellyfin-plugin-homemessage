{
  "name": "jellyfin-plugin-home-message",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "cd Jellyfin.Plugin.HomeMessage && dotnet publish -c Release -f net8.0",
    "build:web": "npm run build:js && npm run build:sass",
    "build:js": "node build.js",
    "build:prod": "node build.js --prod",
    "build:sass": "sass ./Jellyfin.Plugin.HomeMessage/Web/css/home.scss:./Jellyfin.Plugin.HomeMessage/Web/css/build/home.css",
    "watch:js": "node build.js --watch",
    "watch:sass": "sass --watch ./Jellyfin.Plugin.HomeMessage/Web/css/home.scss:./Jellyfin.Plugin.HomeMessage/Web/css/build/home.css",
    "watch:typecheck": "tsc -w --noEmit",
    "dev": "concurrently -k \"npm:watch:js\" \"npm:watch:sass\" \"npm:watch:typecheck\"",
    "test": "cd Jellyfin.Plugin.HomeMessage && dotnet test"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^9.2.1",
    "esbuild": "^0.25.9",
    "prettier": "^3.6.2",
    "sass": "^1.91.0",
    "typescript": "^5.9.2"
  }
}
